 <tr>
  <td class="cart_product">
    <%= image_tag(cart.product.image, size:Settings.size.cart) %>
  </td>
  <td class="cart_description">
    <p><%= cart.product.name %></p>
  </td>
  <td class="cart_quantity">
    <%= link_to t("add"), items_path(product_id: cart.product.id),
    class:"btn btn-success",method: :post ,remote:true %>
    <%= cart.quantity %>
    <%= link_to t("remove"), line_item_path(product_id: cart.product.id),
    class:"btn btn-success", method: :put ,remote:true %>
  </td>
  <td class="cart_total">
    <p class="cart_total_price"><%= cart.product.price %></p>
  </td>
   <td class="cart_total">
    <p class="cart_total_price"><%= cart.quantity * cart.product.price %></p>
  </td>
  <td>
  <% if cannot? [:destroy], cart %>
    <%= link_to deleteitem_path(id: cart.id), method: :delete, remote:true, class: "add-to-cart pull-left" do %>
      <i class="fa fa-trash-o" aria-hidden="true" ></i>
    <% end %>
  <% end %>
  </td>
</tr>
