<% provide(:title, (t "admin.statistic.title")) %>
<h1><%= t "admin.statistic.title" %></h1>
<div class="col-sm-12 ">
  <form class="form-inline">
    <%= form_tag url_for(controller: "statistics", action: "index"), method: "get" do %>
      <div class="form-group">
        <label><%= t "admin.statistic.from" %></label>
        <%= text_field_tag :date_from, "", class: "datepicker" %>
      </div>
      <div class="form-group">
        <label><%= t "admin.statistic.to" %></label>
        <%= text_field_tag :date_to, "", class: "datepicker" %>
      </div>
      <%= hidden_field_tag :filter_order, true  %>
      <div class="form-group">
        <%= submit_tag t("user.show.find"), class: "btn btn-default" %>
      </div>
      <div class="form-control">
        <% if @filter_orders.present? %>
           <%= @filter_orders.count %><%= t "admin.statistic.result" %>
           <%= @filter_orders.sum(:total_amount) %><%= t "admin.statistic.dola" %>
        <% end %>
      </div>
    <% end %>
  </form>
</div>
<div class="col-lg-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i>
        <%= t "admin.statistic.byday" %>
      </h3>
    </div>
    <div class="panel-body">
      <div id="morris-line-chart">
        <table class="table table-striped table-bordered bootstrap-datatable ">
          <thead>
            <tr>
              <th><%= t "admin.statistic.date" %></th>
              <th><%= t "admin.statistic.order" %></th>
              <th><%= t "admin.statistic.total" %></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <% @user_support.date.each do |date| %>
                  <%= date %><br />
                <% end %>
              </td>
              <td>
                <% @user_support.orderdate.each do |order| %>
                  <%= order %><br />
                <% end %>
              </td>
              <td>
                <% @user_support.moneydate.each do |money| %>
                  <%= money %><br />
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
