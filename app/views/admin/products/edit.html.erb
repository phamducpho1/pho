<% provide(:title, (t "admin.product.titleupdate")) %>
<h1><%= t "admin.product.titleupdate" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @product] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :price %>
      <%= f.number_field :price, class: "form-control" %>

      <%= f.label :quanlity %>
      <%= f.number_field :quanlity, class: "form-control" %>

      <%= f.label :information %>
      <%= f.text_area :information, class: "form-control" %>

      <%= f.label :category %>
      <%= f.collection_select :category_id, @cate, :id, :name, {}, {class: "form-control"} %>

      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control" %>

      <%= f.submit (t "admin.product.update"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
