<% provide(:title, t("admin.product.product")) %>
<h1><%= t "admin.product.product" %></h1>
<div class="form-group">
  <div class = "row">
    <div class = "col-sm-2">
      <%=  form_tag(admin_products_path, method: "get") do %>
        <div class="form-group">
          <%= select_tag :q, options_from_collection_for_select(@categories, :id, :name) ,
            class: "form-control"%>
          <%= submit_tag (t "admin.search"), class: "btn btn-success btn-sm"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class = "row">
<div class="table-responsive">
<table class="table">
    <%= link_to "", new_admin_product_path, class: "fa fa-plus fa-1x  btn btn-primary" %>
    <thead>
      <tr>
        <th><%= t "admin.id" %></th>
        <th><%= t "admin.name" %></th>
        <th><%= t "admin.image" %></th>
        <th><%= t "admin.price" %></th>
        <th><%= t "admin.category.category" %></th>
        <th><%= t "admin.createat" %></th>
        <th><%= t "admin.update" %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if @product.present? %>
        <%= render partial: "product", collection: @product %>
      <% else %>
        <%= render partial: "product", collection: @products %>
      <% end %>
    </tbody>
</table>
</div>
</div>
