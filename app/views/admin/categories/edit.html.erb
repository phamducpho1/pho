<% provide(:title, (t "admin.category.titleupdate")) %>
<h1><%= t "admin.category.titleupdate" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit (t "admin.category.update"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
