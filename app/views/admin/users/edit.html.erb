<% provide(:title, (t "admin.user.titleupdate")) %>
<h1><%= t "admin.user.titleupdate" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @user] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :phone %>
      <%= f.text_field :phone, class: "form-control" %>

      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("users.new.confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.label :admin %>
      <%= f.select :admin, User.admins.map{|key, value| [t("#{key}"), key]},
        {}, {class: "form-control"} %>

      <%= f.submit (t "admin.user.update"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
