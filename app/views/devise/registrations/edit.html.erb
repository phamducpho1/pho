<h2><%= t "registrations.new.edit" %> <%= resource_name.to_s.humanize %></h2>
<div class="row">
  <div class="col-md-7 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t "registrations.new.waiting" %> <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field">
        <%= f.label :password %> <i><%= t "registrations.new.leave" %></i><br />
        <%= f.password_field :password, class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> <%= t "registrations.new.characters" %></em>
        <% end %>
      </div>

      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>

      <%= f.label :phone %>
      <%= f.number_field :phone, class: "form-control" %>

      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control" %>

      <div class="field">
        <%= f.label :current_password %> <i><%= t "registrations.new.current" %></i><br />
        <%= f.password_field :current_password, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t("registrations.new.update"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <h3><%= t "registrations.new.cancel" %></h3>

    <p><%= t "registrations.new.uphappy" %><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %></p>

    <%= link_to t("registrations.new.back"), :back, class: "btn btn-primary"%>
</div>
</div>
